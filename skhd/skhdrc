# zoom-fullscreen
cmd + ctrl - f    : yabai -m window --toggle zoom-fullscreen
alt - f           : yabai -m window --toggle zoom-fullscreen
shift + alt - f  : yabai -m window --toggle float --grid 8:8:2:2:4:2

# change window focus within space
alt - j        : yabai -m window --focus south
alt - k        : yabai -m window --focus north
alt - h        : yabai -m window --focus west
cmd + ctrl - h : yabai -m window --focus west
alt - l        : yabai -m window --focus east
cmd + ctrl - l : yabai -m window --focus east
alt - r        : yabai -m window --focus recent

alt - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - r : yabai -m window --swap recent

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# resize window
shift + cmd - h        : yabai -m window --resize left:-60:0
ctrl + shift + cmd - h : yabai -m window --resize left:-60:0
shift + cmd - l        : yabai -m window --resize left:60:0
ctrl + shift + cmd - l : yabai -m window --resize left:60:0
shift + cmd - j        : yabai -m window --resize top:0:-40
shift + cmd - k        : yabai -m window --resize top:0:40

shift + cmd - a : osascript -e 'tell application "Chromium" to activate'
shift + cmd - c : osascript -e 'tell application "Alacritty" to activate'
shift + cmd - s : osascript -e 'tell application "Slack" to activate'
shift + cmd - w : osascript -e 'tell application "Telegram" to activate'
shift + cmd - m : osascript -e 'tell application "Spotify" to activate'
